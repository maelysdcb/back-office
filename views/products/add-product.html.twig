{% extends "base.html.twig" %}


{% block headerTitle %}
	<div class="header header__title">
		<h1>Add a product</h1>
	</div>
{% endblock %}

{% block content %}
	<form action="/products/add-product" method="POST">
		<div class="wrap">
			<div class="wrap__field">
				<div class="wrap__field__item">
					<img class="ion-icon" src="../assets/svg/restaurant-outline.svg" alt="name">
					<label for="name">Name :</label>
				</div>
				<input type="text" name="name" data-id="{{product.id}}" placeholder="Ex: Pasta">
			</div>
			<div class="wrap__field">
				<div class="wrap__field__item">
					<img class="ion-icon" src="../assets/svg/pricetag-outline.svg" alt="price">
					<label for="price">Price :</label>
				</div>
				<input type="text" name="price" data-id="{{product.id}}" placeholder="10.00">
			</div>
		</div>
		<div class="wrap">
			<div class="wrap__field">
				<div class="wrap__field__item">
					<img class="ion-icon" src="../assets/svg/cube-outline.svg" alt="quantity">
					<label for="quantity">Quantity :</label>
				</div>
				<input type="text" name="quantity" data-id="{{product.id}}" placeholder="20">
			</div>
			<div class="wrap__field">
				<div class="wrap__field__item">
					<img class="ion-icon" src="../assets/svg/image-outline.svg" alt="quantity">
					<label for="image">Image :</label>
				</div>
				<input type="text" name="quantity" data-id="{{product.id}}" value="./assets/img/" accept="image/jpeg">
			</div>
		</div>
        <div class="btn-end">
			<button class="wrap__validate" type="submit">Validate</button>
		</div>
	</form>
{% endblock %}

