{% extends "base.html.twig" %}


{% block headerTitle %}
	<div class="header header__title">
		<h1>Add user</h1>
	</div>
{% endblock %}
{% block content %}
	<form action="/users/add-user" method="POST">
		<div class="wrap">
			<div class="wrap__field">
				<div class="wrap__field__label">
					<img class="ion-icon" src="../assets/svg/person-circle-outline.svg" alt="first-name">
					<label for="first_name">First name :</label>
				</div>
				<div class="wrap__field__item">
					<input type="text" name="first_name" data-id="{{user.id}}" placeholder="Toto" required>
					<span class="firstName"></span>
				</div>
			</div>
			<div class="wrap__field">
				<div class="wrap__field__label">
					<img class="ion-icon" src="../assets/svg/person-circle-outline.svg" alt="last-name">
					<label for="last_name">Last name :</label>
				</div>
				<div class="wrap__field__item">
					<input type="text" name="last_name" data-id="{{user.id}}" placeholder="Toto" required>
					<span class="lastName"></span>
				</div>
			</div>
		</div>
		<div class="wrap">
			<div class="wrap__field">
				<div class="wrap__field__label">
					<img class="ion-icon" src="../assets/svg/mail-outline.svg" alt="email">
					<label for="email">Email :</label>
				</div>
				<div class="wrap__field__item">
					<input type="text" name="email" data-id="{{user.id}}" placeholder="example@gmail.com" required>
					<span class="email"></span>
				</div>
			</div>
			<div class="wrap__field">
				<div class="wrap__field__label">
					<img class="ion-icon" src="../assets/svg/card-outline.svg" alt="credits">
					<label for="credits">Credits :</label>
				</div>
				<div class="wrap__field__item">
					<input type="number" name="credits" data-id="{{user.id}}" placeholder="50" required>
					<span class="credits"></span>
				</div>
			</div>
		</div>
		<div class="wrap">
			<div class="wrap__field">
				<div class="wrap__field__label">
					<img class="ion-icon" src="../assets/svg/key-outline.svg" alt="password">
					<label for="password">Password :</label>
				</div>
				<div class="wrap__field__item">
					<input type="password" name="password" data-id="{{user.id}}" placeholder="*************" required>
					<span class="password"></span>
				</div>
			</div>
			<div class="wrap__field radio">
				<div class="wrap__field__label">
					<img class="ion-icon" src="../assets/svg/people-outline.svg" alt="admin">
					<label for="credits">Admin :</label>
				</div>
				<div>
					<input type="radio" id="true" name="isAdmin" value="1"/>
					<label for="">True</label>
				</div>
				<div>
					<input type="radio" id="false" name="isAdmin" value="0" checked/>
					<label for="">False</label>
				</div>
			</div>
		</div>
		<div class="btn-end">
			<button class="wrap__validate" type="submit" disabled>Validate</button>
		</div>
	</form>
{% endblock %}

